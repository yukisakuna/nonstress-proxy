# 署名用シークレット（十分長いランダム文字列に）
SECRET_KEY=replace-with-a-long-random-string

# セッション有効期限（秒）
SESSION_TTL_SECONDS=7200

# nonstress CAPTCHA のスクリプト/検証エンドポイント（デフォルトそのままでOK）
CAPTCHA_JS_URL=https://hamutan86.pythonanywhere.com/nonstress/nonstress.js
CAPTCHA_VALIDATE_URL=https://hamutan86.pythonanywhere.com/nonstress/validate

# 許可するリスクレベル（カンマ区切り）: clean,low,medium,high
ALLOWED_RISK_LEVELS=clean,low

# 管理APIのBasic認証
ADMIN_USER=admin
ADMIN_PASS=changeme

# プロキシ時に Host ヘッダを上流へどう投げるか（original|upstream）
FORWARD_HOST_HEADER=original
